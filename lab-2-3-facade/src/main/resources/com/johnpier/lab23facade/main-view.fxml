<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="380.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.johnpier.lab23facade.AppController">
    <top>
        <Button fx:id="startButton" onAction="#onStartButtonClick" text="Start" textAlignment="CENTER"
                textFill="#003cff" BorderPane.alignment="CENTER">
            <font>
                <Font size="19.0"/>
            </font>
        </Button>
    </top>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <center>
        <Pane fx:id="drawPane" prefHeight="300.0" prefWidth="300.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="10.0"/>
            </BorderPane.margin>
            <Pane fx:id="autoElement" layoutX="-110.0" layoutY="157.0" prefHeight="50.0" prefWidth="103.0"
                  rotate="-0.7">
                <Ellipse fill="#1a83d4" layoutX="51.0" layoutY="26.0" radiusX="48.0" radiusY="10.0" stroke="BLACK"
                         strokeType="INSIDE"/>
                <Circle fill="#181818" layoutX="20.0" layoutY="36.0" radius="6.0" stroke="BLACK" strokeType="INSIDE"/>
                <Circle fill="#181818" layoutX="75.0" layoutY="33.0" radius="6.0" stroke="BLACK" strokeType="INSIDE"/>
                <rotationAxis>
                    <Point3D y="1.0" z="1.0"/>
                </rotationAxis>
            </Pane>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#383838" height="81.0" layoutX="202.0" layoutY="214.0"
                       stroke="BLACK" strokeType="INSIDE" width="14.0"/>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#d5d9cf" height="120.0" layoutX="183.0" layoutY="97.0"
                       stroke="BLACK" strokeType="INSIDE" width="53.0"/>
            <Circle fx:id="greenLight" layoutX="209.0" layoutY="198.0" radius="16.0" stroke="BLACK" strokeType="INSIDE">
                <fill>
                    <LinearGradient endX="1.0" endY="1.0">
                        <stops>
                            <Stop>
                                <color>
                                    <Color/>
                                </color>
                            </Stop>
                            <Stop offset="1.0">
                                <color>
                                    <Color red="1.0" green="1.0" blue="1.0"/>
                                </color>
                            </Stop>
                        </stops>
                    </LinearGradient>
                </fill>
            </Circle>
            <Circle fx:id="yellowLight" layoutX="210.0" layoutY="157.0" radius="16.0" stroke="BLACK"
                    strokeType="INSIDE">
                <fill>
                    <LinearGradient endX="1.0" endY="1.0">
                        <stops>
                            <Stop>
                                <color>
                                    <Color/>
                                </color>
                            </Stop>
                            <Stop offset="1.0">
                                <color>
                                    <Color red="1.0" green="1.0" blue="1.0"/>
                                </color>
                            </Stop>
                        </stops>
                    </LinearGradient>
                </fill>
            </Circle>
            <Circle fx:id="redLight" layoutX="210.0" layoutY="117.0" radius="16.0" stroke="BLACK" strokeType="INSIDE">
                <fill>
                    <LinearGradient>
                        <stops>
                            <Stop>
                                <color>
                                    <Color/>
                                </color>
                            </Stop>
                            <Stop offset="1.0">
                                <color>
                                    <Color red="1.0" green="1.0" blue="1.0"/>
                                </color>
                            </Stop>
                        </stops>
                    </LinearGradient>
                </fill>
            </Circle>
        </Pane>
    </center>
</BorderPane>
